<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Simple Log Tracker Dashboard</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css">
    <style>
        .box {
            margin-top: 20px;
        }
    </style>
</head>
<body>

    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h2>Simple Log Tracker Dashboard</h2>
                <button id="initializeDbButton" class="btn btn-danger">(Re)Initialize Data</button>
                <h2>Users</h2>
                <div class="box">
                    <div class="box-body">
                        <div class="form-group">
                            <label for="startDate">Start Date:</label>
                            <input type="text" id="startDate" class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="endDate">End Date:</label>
                            <input type="text" id="endDate" class="form-control">
                        </div>
                        <button id="filterButton" class="btn btn-primary">Filter</button>
                    </div>
                </div>
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">User List</h3>
                    </div>
                    <div class="box-body">
                        <table id="usersTable" class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>First Name</th>
                                    <th>Last Name</th>
                                    <th>Email</th>
                                    <th>Total Hours</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <h2>Top 10 Users/Projects by Hours</h2>
                <div>
                    <input type="radio" id="radioUser" name="chartType" value="user" checked>
                    <label for="radioUser">User</label>
                    <input type="radio" id="radioProject" name="chartType" value="project">
                    <label for="radioProject">Project</label>
                </div>
                <div id="chart_div"></div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="https://www.gstatic.com/charts/loader.js"></script>
    <script>
        $(document).ready(function () {
            $('#startDate, #endDate').datepicker();

            var usersTable = $('#usersTable').DataTable({
                processing: true,
                serverSide: true,
                ajax: {
                    url: '/api/trackerUsers',
                    type: 'POST',
                    contentType: 'application/json',
                    data: function (d) {
                        var startDate = $('#startDate').datepicker('getDate');
                        var endDate = $('#endDate').datepicker('getDate');
                        d.startDate = startDate ? startDate.toISOString() : null;
                        d.endDate = endDate ? endDate.toISOString() : null;
                        return JSON.stringify(d);
                    },
                    dataSrc: function (json) {
                        return json.data;
                    }
                },
                columns: [
                    { data: 'firstName' },
                    { data: 'lastName' },
                    { data: 'email' },
                    { data: 'totalHours' },
                    {
                        data: 'id',
                        render: function (data, type, row) {
                            return '<button class="btn btn-primary compare-btn" data-user-id="' + data + '">Compare</button>';
                        }
                    }
                ],
                pageLength: 10,
                searching: false,
                destroy: true
            });

            $('#initializeDbButton').click(function () {
                $.ajax({
                    url: '/api/initData',
                    method: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify({}),
                    success: function (result) {
                        alert('Data (re)initialized successfully!');
                        usersTable.ajax.reload();
                        drawChart();
                    },
                    error: function (xhr, status, error) {
                        alert('Failed to initialize database: ' + xhr.responseText);
                    }
                });
            });

            $('#filterButton').click(function () {
                usersTable.ajax.reload(); // Reload the table with the new filter parameters
            });

            google.charts.load('current', { packages: ['corechart', 'bar'] });
            google.charts.setOnLoadCallback(drawChart);

            $('input[name="chartType"]').change(function () {
                drawChart();
            });

            function drawChart() {
                var chartType = $('input[name="chartType"]:checked').val();
                var data = new google.visualization.DataTable();
                data.addColumn('string', chartType === 'user' ? 'User' : 'Project');
                data.addColumn('number', 'Hours');

                var chartData = getUsersProjectsData(chartType);
                var filteredChartData = chartData.filter(item => item[2] === chartType).map(item => [item[0], item[1]]);
                data.addRows(filteredChartData);

                var options = {
                    title: chartType === 'user' ? 'Top 10 Users by Hours' : 'Top 10 Projects by Hours',
                    hAxis: { title: chartType === 'user' ? 'User' : 'Project' },
                    vAxis: { title: 'Hours' },
                    legend: 'none'
                };

                var chart = new google.visualization.ColumnChart(document.getElementById('chart_div'));
                chart.draw(data, options);
            }

            function getUsersProjectsData(type) {
                return [
                    ["John", 40, "user"],
                    ["Jane", 35, "user"],
                    ["Zane", 60, "user"],
                    ["Alice", 50, "user"],
                    ["Bob", 45, "user"],
                    ["Charlie", 30, "user"],
                    ["David", 55, "user"],
                    ["Eve", 25, "user"],
                    ["Frank", 20, "user"],
                    ["Grace", 15, "user"],
                    ["My own", 150, "project"],
                    ["Free Time", 200, "project"],
                    ["Work", 300, "project"]
                ];
            }

            $(document).on('click', '.compare-btn', function () {
                var userId = $(this).data('user-id');
                $.ajax({
                    url: '/api/timelog/user/' + userId,
                    method: 'GET',
                    success: function (data) {
                        drawChartWithComparison(data);
                    }
                });
            });

            function drawChartWithComparison(comparisonData) {
                var data = new google.visualization.DataTable();
                data.addColumn('string', 'Date');
                data.addColumn('number', 'Hours');
                data.addColumn('number', 'Comparison');

                comparisonData.forEach(function (item) {
                    data.addRow([item.date, item.hours, item.comparison]);
                });

                var options = {
                    title: 'User Hours Comparison',
                    hAxis: { title: 'Date' },
                    vAxis: { title: 'Hours' },
                    series: {
                        0: { color: 'blue' },
                        1: { color: 'red' }
                    }
                };

                var chart = new google.visualization.LineChart(document.getElementById('chart_div'));
                chart.draw(data, options);
            }

            // Initial load of the users table
            usersTable.ajax.reload();
        });
    </script>
</body>
</html>
